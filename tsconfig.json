{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.tsbuildinfo",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "ESNext",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "noEmit": true,
    "esModuleInterop": true,

    "strict": true,
    "strictNullChecks": true
  },
  "include": ["**/*.ts"],
  "exclude": ["examples", "playground"]
}
